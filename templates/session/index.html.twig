{% extends 'base.html.twig' %}

{% block title %}Liste des sessions{% endblock %}

{% block body %}
    <h1>{{ formation.nomFormation }}</h1> 
    
    <h2>Sessions</h2>
    
    <a class="new-session" href="{{ path('new_session')}}"><i class="fa-solid fa-plus"></i></a>
    {% for session in formation.sessions %}
        <a href="{{ path('show_session', {'id':session.id })}}">
            <div class="sessions-container">
                <div class="sessions">
                    {{ session.nomSession }}
                    <a class="edit-session" href="{{ path('edit_session', {'id': session.id } )}}">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a class="delete-session" href="{{ path('delete_session', {'id':session.id})}}">
                        <i class="fa-solid fa-xmark"></i>
                    </a>
                </div>
            </div>
        </a>
    {% endfor %}

{% endblock %}