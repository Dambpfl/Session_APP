{% extends 'base.html.twig' %}

{% block title %}Détails de la session{% endblock %}

{% block body %}
    <h1>Détails de la session</h1>

    <h2>{{ session.nomSession }}</h2>

    <h3>Formateur</h3>
    <p>{{ session.formateur.nomFormateur }} {{ session.formateur.prenomFormateur }}</p>

    <h3>Informations</h3>
    <p>Nombre de place : {{ session.place }}</p>
    <p>Date de début : {{ session.dateDebut | date("d-m-Y") }}</p>
    <p>Date de fin : {{ session.dateFin | date("d-m-Y") }}</p>

    <h3>Modules</h3>
    {% for programme in session.programmes %}
        <p>{{ programme.module.nomModule }} - 

        {% if programme.nbJour is same as(1) %}
            {{ programme.nbJour}} jour
        {% else %}
            {{ programme.nbJour}} jours
        {% endif %} </p>

    {% endfor %}

    <h3>Stagiaires</h3>
    {% for stagiaire in session.stagiaires %}
        {{ stagiaire.nomStagiaire}} {{ stagiaire.prenomStagiaire}} <br>
    {% endfor %}
{% endblock %}