{% extends 'base.html.twig' %}

{% block title %}Détails des stagiaires{% endblock %}

{% block body %}
    <h1>Détails des stagiaires</h1>
    <a href="{{ path('new_stagiaire')}}" class="new-stagiaire"><i class="fa-solid fa-plus"></i></a><br>
    {% for stagiaire in stagiaires %}
    <div class="listStagiaire-container">
        {{ stagiaire.nomStagiaire}} {{ stagiaire.prenomStagiaire}} <a href="{{ path('edit_stagiaire', {'id': stagiaire.id } )}}" class="edit-listStagiaire"><i class="fa-solid fa-pen-to-square"></i></a></i><br>
        Sexe : {{ stagiaire.sexe }}<br>
        Date de naissance : {{ stagiaire.dateNaissance | date("d-m-Y") }}<br>
        Ville : {{ stagiaire.ville }}<br>
        Courriel : {{ stagiaire.email }}<br>
        Téléphone : {{ stagiaire.telephone}}<br>
        Sessions prévues : <br>
        {% for session in stagiaire.sessions %}
            - {{ session.nomSession}} <br>
        {% endfor %}
        <a href="{{ path('delete_stagiaire', {'id': stagiaire.id })}}" class="delete-listStagiaire"><i class="fa-solid fa-xmark"></i></a>
    </div>
    {% endfor %}
{% endblock %}
