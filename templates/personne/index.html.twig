{% extends 'base.html.twig' %}

{% block title %}Détails des stagiaires{% endblock %}

{% block body %}
    <h1>Détails des stagiaires</h1>

    {% for stagiaire in stagiaires %}
        {{ stagiaire.nomStagiaire}} {{ stagiaire.prenomStagiaire}} <i class="fa-solid fa-pen-to-square"></i><br>
        Sexe : {{ stagiaire.sexe }}<br>
        Date de naissance : {{ stagiaire.dateNaissance | date("d-m-Y") }}<br>
        Ville : {{ stagiaire.ville }}<br>
        Courriel : {{ stagiaire.email }}<br>
        Téléphone : {{ stagiaire.telephone}}<br>
        Sessions prévues : <br>
        {% for session in stagiaire.sessions %}
            - {{ session.nomSession}} <br>
        {% endfor %}<br><br>

    {% endfor %}
{% endblock %}
