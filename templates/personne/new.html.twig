{% extends 'base.html.twig' %}

{% block title %}Ajouter un stagiaire{% endblock %}

{% block body %}
    {% if edit %}
        <h1>Modifier un stagiaire</h1>     
    {% else %}
        <h1>Ajouter un stagiaire</h1>
    {% endif %}

   {#  <p>{{ form(formAddStagiaire) }}</p>  #}

   {# DISPOSITION DES FORMULAIRES AVEC FORM_START + DIV #}
     {{ form_start(formAddStagiaire) }} 
     <div class="row">
        <div class="col-sm">
            {{ form_row(formAddStagiaire.nomStagiaire) }}
        </div>
        <div class="col-sm">
            {{ form_row(formAddStagiaire.prenomStagiaire) }}
        </div>
     </div>
     <div class="row">
         <div class="col-sm">
             {{ form_row(formAddStagiaire.sexe) }}
         </div>
         <div class="col-sm">
             {{ form_row(formAddStagiaire.ville) }}
         </div>
     </div>
     {{ form_row(formAddStagiaire.dateNaissance) }}
     <div class="row">
         <div class="col-sm">
            {{ form_row(formAddStagiaire.email) }}
         </div>
         <div class="col-sm">
            {{ form_row(formAddStagiaire.telephone) }}
         </div>
     </div>     
         
        {{ form_row(formAddStagiaire.sessions) }}
        {{ form_row(formAddStagiaire.valider) }}


     {{ form_end(formAddStagiaire) }} 


{% endblock %}