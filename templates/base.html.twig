<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">     
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css')}}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav>
            <nav-left>
                {% if app.user %}
                <span><i class="fa-solid fa-user"></i> {{app.user.email}}</span>
                <a href="{{ path('app_home')}}"><i class="fa-solid fa-house"></i> Formations</a>
                <a href="{{ path('app_list_session')}}"><i class="fa-brands fa-artstation"></i> Sessions</a>
            </nav-left>
            <nav-right>
                <a href="{{ path('app_module')}}"><i class="fa-solid fa-book"></i> Modules</a>
                <a href="{{ path('app_stagiaire')}}"><i class="fa-solid fa-book"></i> Stagiaires</a>
                <a href="{{ path('app_formateur')}}"><i class="fa-solid fa-book"></i> Formateurs</a>
                <a href="{{ path('app_logout')}}"><i class="fa-solid fa-power-off"></i></a>
                {% else %}
                <a href="{{ path('app_login')}}">Se connecter</a>
                {% endif %}
            </nav-right>
        </nav>

        {% block body %}
        {% endblock %}
    </body>
</html>
